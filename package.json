{
  "name": "battlecube",
  "version": "1.0.0",
  "description": "Battlecube is a game where small cubes (bots) fight each other with bombs inside a cube shaped 3d grid.",
  "main": "build/src/server.js",
  "scripts": {
    "start:server": "node build/server/src/server.js",
    "start:server-debug": "node $NODE_DEBUG_OPTION build/server/src/server.js",
    "start:client": "rollup --config client/rollup.config.js -w",
    "copy-assets": "copyfiles client/**/*.json server/**/*.json build/",
    "build": "rm -rf build/ && tsc && npm run copy-assets",
    "build:client": "rollup --config client/rollup.config.js",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/leomelin/battlecube.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/leomelin/battlecube/issues"
  },
  "homepage": "https://github.com/leomelin/battlecube#readme",
  "devDependencies": {
    "@types/joi": "^10.4.3",
    "@types/node-fetch": "^1.6.7",
    "@types/socket.io": "^1.4.30",
    "@types/socket.io-client": "^1.4.30",
    "@types/three": "^0.84.26",
    "copyfiles": "^1.2.0",
    "jest": "^21.2.1",
    "postcss-nested": "^2.1.2",
    "rollup": "^0.50.0",
    "rollup-plugin-commonjs": "^8.2.1",
    "rollup-plugin-json": "^2.3.0",
    "rollup-plugin-livereload": "^0.6.0",
    "rollup-plugin-node-resolve": "^3.0.0",
    "rollup-plugin-postcss": "^0.5.5",
    "rollup-plugin-serve": "^0.4.2",
    "rollup-plugin-typescript": "^0.8.1",
    "tslint": "^5.7.0",
    "tslint-config-airbnb": "^5.3.0",
    "typescript": "^2.5.3"
  },
  "dependencies": {
    "hyperapp": "^0.14.0",
    "joi": "^11.1.1",
    "node-fetch": "^1.7.3",
    "socket.io": "^2.0.3",
    "socket.io-client": "^2.0.3",
    "three.js": "^0.77.1"
  },
  "jest": {
    "roots": [
      "<rootDir>/build/server/src",
      "<rootDir>/build/client/src",
      "<rootDir>/tests/"
    ],
    "setupTestFrameworkScriptFile": "<rootDir>/tests/jasmine-config.js",
    "testEnvironment": "node"
  }
}
